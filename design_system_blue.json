{
  "designSystem": {
    "meta": {
      "name": "NeoBlue Dark Dashboard",
      "intent": "Ciemny, futurystyczny styl w palecie niebiesko-czarnej.",
      "tone": [
        "nowoczesny",
        "technologiczny",
        "profesjonalny"
      ]
    },
    "style": {
      "theme": "dark",
      "colors": {
        "background": {
          "base": "#0A0D12",
          "elevated": "#10141C",
          "surface": "#141A24"
        },
        "text": {
          "primary": "#FFFFFF",
          "secondary": "#C9D0DB",
          "muted": "#8C97A8",
          "link": "#4D8CFF"
        },
        "primary": "#2E6CFF",
        "accent": "#00B8F0",
        "border": "rgba(255,255,255,0.06)",
        "gradients": {
          "hero": [
            "#0A0D12",
            "#0E1430",
            "#0A0D12"
          ],
          "cta": [
            "#2E6CFF",
            "#00B8F0"
          ],
          "folderCard": [
            "#3B66FF",
            "#5B8BFF"
          ]
        }
      },
      "typography": {
        "headingFont": "Inter, SF Pro Display, sans-serif",
        "bodyFont": "Inter, Roboto, sans-serif",
        "scale": {
          "h1": {
            "size": 56,
            "weight": 800
          },
          "h2": {
            "size": 40,
            "weight": 800
          },
          "h3": {
            "size": 28,
            "weight": 700
          },
          "body": {
            "size": 16,
            "weight": 400
          },
          "lead": {
            "size": 18,
            "weight": 500
          }
        }
      },
      "radii": {
        "md": 16,
        "lg": 20,
        "xl": 24,
        "pill": 999
      },
      "shadows": {
        "card": "0 12px 28px rgba(0,0,0,0.45)",
        "elevated": "0 20px 50px rgba(0,0,0,0.6)",
        "glowBlue": "0 0 24px rgba(46,108,255,0.45)"
      }
    },
    "layout": {
      "grid": {
        "columns": 12,
        "gutter": 24,
        "maxWidth": 1240
      },
      "sections": [
        "navbar",
        "hero",
        "metrics",
        "features",
        "process",
        "workPreview",
        "testimonials",
        "team",
        "ctaFooter"
      ]
    },
    "components": {
      "button": {
        "primary": {
          "style": "gradient",
          "gradient": "cta",
          "textColor": "#0B0F15",
          "radius": "pill",
          "shadow": "glowBlue"
        },
        "ghost": {
          "style": "transparent",
          "border": "border",
          "textColor": "text.primary"
        }
      },
      "card": {
        "base": {
          "background": "surface",
          "border": "border",
          "radius": "lg",
          "shadow": "card"
        },
        "folder": {
          "gradient": "folderCard",
          "icon": "folder"
        },
        "file": {
          "badge": "fileType",
          "actions": [
            "preview",
            "download"
          ]
        },
        "testimonial": {
          "avatar": "circle",
          "quote": "short text"
        },
        "process": {
          "type": "timeline",
          "activeStepColor": "primary"
        }
      }
    },
    "motion": {
      "pageLoad": "fade-in + slide-up",
      "hover": "scale 1.02 + glowBlue",
      "ctaPulse": "subtle loop pulse"
    }
  }
}